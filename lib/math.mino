lib standart;

fun int pow(int number, int power) {
    var int result = 0;
    for (int i = 0; i < power; i++) {
        result *= number;
    }
    return result;
}

fun bool? sign(double number) {
    if (number == 0) return null;
    else return number > 0;
    // return { if (number == 0) null; else number > 0; }
}

fun double abs(double value) {
    if (value < 0) return value / -1.0;
    else return value;
}
